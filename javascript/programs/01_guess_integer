const prompt = require('prompt-sync')({ sigint: true })
let getRandomInteger = (min, max)=>{
    let minceil = Math.ceil(min);
    let maxfloor = Math.floor(max);
    return Math.floor(Math.random()* (maxfloor-minceil+1) + minceil) // Math.random() ---> generates decimals between 0 to 1 
}

// console.log(getRandomInteger(1, 6)) ----> debug

let userInput = prompt("Enter a number between 1-100: ");
let computerInput = getRandomInteger(1, 100);
let guessAttempts = 0;
while(true){
    if(computerInput<userInput){
        console.log(`Try again!, The number is less than ${userInput}.`);
    }
    else if(computerInput>userInput){
         console.log(`Try again!, The number is greater than ${userInput}.`);
    }
    else {
        console.log(`You won! the number was ${computerInput}`);
        console.log(`Score: ${100-guessAttempts}`);
        break;
    }
    guessAttempts++;
    userInput = prompt("Enter a number between 1-100: ");
}